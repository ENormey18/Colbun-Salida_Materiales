<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="receptorSelectDialog"
        title="{i18n>recipientDialogTitle}"
        contentHeight="50%" 
        items="{
            path: 'salidaMateriales>/Receptores'
        }"
        search=".onSearch"
        confirm=".onClose"
        cancel=".onClose"
    >
        <StandardListItem
            title="{salidaMateriales>Nombre}"
            description="{salidaMateriales>Usuario}"
            type="Active"
        />
    </SelectDialog>
</core:FragmentDefinition>