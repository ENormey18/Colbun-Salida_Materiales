<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog afterOpen=".onAfterRenderingCanvas">
        <customHeader>
            <Toolbar style="Clear">
                <Button icon="sap-icon://decline" press=".onCloseSignatureDialog"/>
                <Title text="{i18n>signPadTitle}"/>
                <ToolbarSpacer />
                <Button text="{i18n>save}" press=".onSaveSignature"/>
            </Toolbar>
        </customHeader>
        <core:HTML id="signatureCanvasContainer" />
        <footer>
            <Toolbar style="Clear">
                <ToolbarSpacer />
                <Button text="{i18n>clear}" press=".onClearSignature"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
