<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Table
        id="reservasTable"
        items="{Reservas>/ReservasSet}"
        mode="MultiSelect"
        headerText="Reservas"
        growing="true"
        growingScrollToLoad="true"
        autoPopinMode="true"
    >
        <columns>
            <Column>
                <Text text="Orden" />
            </Column>
            <Column>
                <Text text="Estado" />
            </Column>
            <Column>
                <Text text="Changed On" />
            </Column>
            <Column>
                <Text text="Customer" />
            </Column>
            <Column>
                <Text text="Customer Contact" />
            </Column>
            <Column>
                <Text text="Quantity" />
            </Column>
            <Column>
                <Text text="Net Amount" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onItemPress"
            >
                <cells>
                    <ObjectIdentifier
                        title="{Reservas>orderId}"
                        titleActive="true"
                        titlePress=".onItemPress"
                    />
                    <Text text="{Reservas>state}" />
                    <Text text="{Reservas>LocalModel>baseReqDate}" />
                    <ObjectIdentifier title="{Reservas>customer}" />
                    <Text text="{Reservas>customerContact}" />
                    <Text text="{Reservas>LocalModel>quantity}" />
                    <HBox>
                        <Text text="{Reservas>netAmount}" />
                        <Text text="{Reservas>currency}" />
                    </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
