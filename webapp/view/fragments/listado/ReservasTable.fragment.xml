<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Table
        id="reservasTable"
        items="{Reservas>/ReservaSet}"
        mode="None"
        headerText="Reservas [{= ${Reservas>/ReservaSet}.length}]"
        growing="true"
        growingThreshold="100"
        growingScrollToLoad="false"
        autoPopinMode="true"
    >
        <columns>
            <Column>
                <Button
                    text="N° Reserva"
                    type="Transparent"
                    icon="sap-icon://sort"
                    press="onSort"
                    app:sortProperty="Id" 
                />
            </Column>
            <Column>
                 <Button
                    text="Código Mov."
                    type="Transparent"
                    icon="sap-icon://sort"
                    press="onSort"
                    app:sortProperty="MovCode"
                />
            </Column>
            <Column>
                <Text text="Orden" />
            </Column>
            <Column>
                <Text text="Usuario" />
            </Column>
            <Column>
                <Text text="Destinatario" />
            </Column>
            <Column>
                 <Button
                    text="Estado"
                    type="Transparent"
                    icon="sap-icon://sort"
                    press="onSort"
                    app:sortProperty="Status"
                />
            </Column>
            <Column>
                <Text text="Centro de Coste" />
            </Column>
            <Column>
                <Text text="Fecha Base" />
            </Column>
            <Column>
                <Button
                    text="Fecha Necesidad"
                    type="Transparent"
                    icon="sap-icon://sort"
                    press="onSort"
                    app:sortProperty="ReqDate"
                />
            </Column>
            <Column>
                <Text text="Centro" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onItemPress"
            >
                <cells>
                    <ObjectIdentifier
                        title="{Reservas>Id}"
                        titleActive="true"
                        titlePress=".onItemPress"
                    />
                    <Text text="{Reservas>MovCode}" />
                    <Text text="{Reservas>Orden}" />
                    <Text text="{Reservas>Usuario}" />
                    <Text text="{Reservas>Dest}" />
                    <ObjectStatus
                        icon="{
                            path: 'Reservas>Status',
                            formatter: '.formatter.statusIcon'
                        }"
                        text="{
                            path: 'Reservas>Status',
                            formatter: '.formatter.statusText'
                        }"
                        state="{
                            path: 'Reservas>Status',
                            formatter: '.formatter.statusTextState'
                        }"
                    />  
                    <Text text="{Reservas>CostCenter}" />
                    <Text text="{Reservas>BaseDate}" />
                    <Text text="{Reservas>ReqDate}" />
                    <Text text="{Reservas>Centro}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
