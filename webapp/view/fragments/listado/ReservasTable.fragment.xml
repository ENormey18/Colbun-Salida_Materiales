<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Table
        id="mainTable"
        items="{ path:'LocalModel>/filteredReservas' }"
        mode="MultiSelect"
        inset="false"
        headerText="Reservas"
        growing="true"
        growingScrollToLoad="true"
    >
        <columns>
            <Column>
                <Text text="Orden" />
            </Column>
            <Column>
                <Text text="Estado" />
            </Column>
            <Column>
                <Text text="Changed On" />
            </Column>
            <Column>
                <Text text="Customer" />
            </Column>
            <Column>
                <Text text="Customer Contact" />
            </Column>
            <Column>
                <Text text="Quantity" />
            </Column>
            <Column>
                <Text text="Net Amount" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onItemPress"
            >
                <cells>
                    <ObjectIdentifier
                        title="{LocalModel>orderId}"
                        titleActive="true"
                        titlePress=".onItemPress"
                    />
                    <Text text="{LocalModel>state}" />
                    <Text text="{LocalModel>changedOn}" />
                    <ObjectIdentifier title="{LocalModel>customer}" />
                    <Text text="{LocalModel>customerContact}" />
                    <Text text="{LocalModel>quantity}" />
                    <HBox>
                        <Text text="{LocalModel>netAmount}" />
                        <Text text="{LocalModel>currency}" />
                    </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
