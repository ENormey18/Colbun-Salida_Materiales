<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Table
        id="reservasTable"
        items="{Reservas>/ItemsSet}"
        mode="None"
        headerText="Reservas"
        growing="true"
        growingScrollToLoad="true"
        autoPopinMode="true"
    >
        <columns>
            <Column>
                <Text text="N° Reserva" />
            </Column>
            <Column>
                <Text text="Posicion" />
            </Column>
            <Column>
                <Text text="Orden" />
            </Column>
            <Column>
                <Text text="Código Mov." />
            </Column>
            <Column>
                <Text text="Estado" />
            </Column>
            <Column>
                <Text text="Usuario" />
            </Column>
            <Column>
                <Text text="Destinatario" />
            </Column>
            <Column>
                <Text text="Material" />
            </Column>
            <Column>
                <Text text="Descipción" />
            </Column>
            <Column>
                <Text text="Lote" />
            </Column>
            <Column>
                <Text text="Centro" />
            </Column>
            <Column>
                <Text text="Cantidad Necesaria" />
            </Column>
            <Column>
                <Text text="Fecha Necesidad" />
            </Column>
        </columns>
        <items>
            <ColumnListItem
                type="Navigation"
                press=".onItemPress"
            >
                <cells>
                    <ObjectIdentifier
                        title="{Reservas>ReservaId}"
                        titleActive="true"
                        titlePress=".onItemPress"
                    />
                    <Text text="{Reservas>Pos}" />
                    <Text text="{Reservas>Order}" />
                    <Text text="{Reservas>MovCode}" />
                    <Text text="{Reservas>Status}" />
                    <Text text="{Reservas>User}" />
                    <Text text="{Reservas>Dest}" />
                    <Text text="{Reservas>Material}" />
                    <Text text="{Reservas>Description}" />
                    <Text text="{Reservas>Batch}" />
                    <Text text="{Reservas>Center}" />
                    <Text text="{Reservas>ReqQuantity}" />
                    <Text text="{Reservas>ReqDate}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
