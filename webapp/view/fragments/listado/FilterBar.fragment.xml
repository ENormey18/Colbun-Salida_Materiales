<core:FragmentDefinition xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <layout:Grid>
        <HBox wrap="Wrap" alignItems="End">
            <layoutData>
                <layout:GridData span="XL10 L10 M9 S12"/>
            </layoutData>
            <VBox>
                <Label
                        text="Reserva"
                        showColon="true"
                />
                <SearchField
                    id="filtroReservas"
                    value="{Reservas>/filters/reserva}"
                    width="150px"
                />
            </VBox>
            <VBox>
                <Label
                    text="Orden"
                    showColon="true"
                />
                <SearchField
                    id="ordenFilter"
                    width="150px"
                    value="{Reservas>/filters/orden}"
                />
            </VBox>

            <VBox>
                <Label
                    text="Fecha Necesidad"
                    showColon="true"
                />
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="yyyy-MM-dd"
                    name="pocNac"
                    id="pocNacFilter"
                    value="{Reservas>/filters/fechaFrom}"
                    width="150px"
                />
            </VBox>
        </HBox>
        <VBox >
            <layoutData>
                    <layout:GridData span="XL2 L2 M3 S12"/>
            </layoutData>
            <HBox gap="10px">
                <Button
                    icon="sap-icon://filter"
                    press=".openInitialFilters"
                />
                <Button
                    text="Go"
                    press=".onSearch"
                    type="Emphasized"
                />
                <Button
                    text="Clear"
                    press=".onClear"
                />
            </HBox>
        </VBox>
    </layout:Grid>
</core:FragmentDefinition>
