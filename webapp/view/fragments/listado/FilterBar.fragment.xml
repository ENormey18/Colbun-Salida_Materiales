<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <fb:FilterBar id="filterBar" useToolbar="false" search=".onSearch" showClearOnFB="true" clear=".onClear">
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="Group1"
                name="generalFilter"
                label=""
                visibleInFilterBar="true"
            >
                <fb:control>
                    <SearchField id="generalFilter"/>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="Group1"
                name="Orden"
                label="Orden"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <SearchField id="ordenFilter"/>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="Group1"
                name="Poc Nac"
                label="Poc Nac"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <DatePicker valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" name="pocNac" id="pocNacFilter"/>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="Group1"
                name="Initial filters"
                label=""
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Button text="Abrir filtros iniciales" press=".openInitialFilters"/>
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
</core:FragmentDefinition>
