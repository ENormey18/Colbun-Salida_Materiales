<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog>
        <customHeader>
            <OverflowToolbar >
                <Title text="{i18n>reservIntialFilterTitle}"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press=".onCloseInitialFilters"/>
            </OverflowToolbar>
        </customHeader>
        <content>
            <form:SimpleForm>
                <Label text="{i18n>reservation}"/>
                <Input id="reservaInput" value="{Reservas>/filters/reserva}"/>
                <Label text="{i18n>requirmentDate}"/>
                <DatePicker placeholder="{i18n>from}" id="fechaNecesidadFromInput" value="{Reservas>/filters/fechaFrom}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" change="onSetFromDate"/>
                <DatePicker placeholder="{i18n>to}" id="fechaNecesidadToInput" value="{Reservas>/filters/fechaTo}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
                <Label text="{i18n>material}" />
                <Input id="materialFromInput" placeholder="{i18n>from}" value="{Reservas>/filters/materialFrom}"/>
                <Input id="materialToInput" placeholder="{i18n>to}" value="{Reservas>/filters/materialTo}"/>
                <Label text="{i18n>center}" />
                <MultiComboBox width="300px" id="centroInput" selectedKeys="{Reservas>/filters/centros}" items='{Reservas>/centros}'>
                    <core:ListItem key="{Reservas>ID}" text="{Reservas>ID} - {Reservas>Name}"/>
                </MultiComboBox>
                <SegmentedButton selectedKey="{Reservas>/filters/status}">
                    <items>
                        <SegmentedButtonItem text="{i18n>pending}" key="O"/>
                        <SegmentedButtonItem text="{i18n>completed}" key="C"/>
                    </items>
                </SegmentedButton>
            </form:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>search}"
                    press=".onSearch"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
