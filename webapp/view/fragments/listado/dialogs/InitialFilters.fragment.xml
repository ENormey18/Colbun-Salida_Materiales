<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog>
        <customHeader>
            <OverflowToolbar >
                <Title text="Filtrar reserva:"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press=".onCloseInitialFilters"/>
            </OverflowToolbar>
        </customHeader>
        <content>
            <form:SimpleForm>
                <Label text="Reserva"/>
                <Input id="reservaInput" value="{Reservas>/filters/reserva}"/>
                <Label text="Fecha de necesidad"/>
                <DatePicker placeholder="from" id="fechaNecesidadFromInput" value="{Reservas>/filters/fechaFrom}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" change="onSetFromDate"/>
                <DatePicker placeholder="to" id="fechaNecesidadToInput" value="{Reservas>/filters/fechaTo}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd"/>
                <Label text="Material" />
                <Input id="materialFromInput" placeholder="from" value="{Reservas>/filters/materialFrom}"/>
                <Input id="materialToInput" placeholder="to" value="{Reservas>/filters/materialTo}"/>
                <Label text="Centro" />
                <MultiComboBox width="300px" id="centroInput" selectedKeys="{Reservas>/filters/centros}" items='{Reservas>/centros}'>
                    <core:ListItem key="{Reservas>ID}" text="{Reservas>ID} - {Reservas>Name}"/>
                </MultiComboBox>
                <SegmentedButton selectedKey="{Reservas>/filters/status}">
                    <items>
                        <SegmentedButtonItem text="Pendientes" key="O"/>
                        <SegmentedButtonItem text="Completados" key="C"/>
                    </items>
                </SegmentedButton>
            </form:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Buscar"
                    press=".onSearch"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
