<core:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Dialog>
        <customHeader>
            <OverflowToolbar >
                <Title text="Datos de reserva"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" press=".onCloseInitialFilters"/>
            </OverflowToolbar>
        </customHeader>
        <content>
            <form:SimpleForm>
                <Label text="Material" />
                <Input id="materialFromInput" placeholder="from" />
                <Input id="materialToInput" placeholder="to" />
                <Label text="Centro" />
                <Input id="centroInput" />
            </form:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Buscar"
                    press=".onInitialBuscar"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
