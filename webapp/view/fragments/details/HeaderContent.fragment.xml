<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <HBox
        gap="5%"
        wrap="Wrap"
    >
        <VBox>
            <HBox
                gap="5px"
                wrap="Wrap"
            >
                <ObjectAttribute title="Usuario " />
                <Text text="{detalleReserva>/User}" />
            </HBox>
            <HBox
                gap="5px"
                wrap="Wrap"
            >
                <ObjectAttribute title="Orden " />
                <Text text="{detalleReserva>/Order}" />
            </HBox>
        </VBox>
        <VBox>
            <ObjectStatus title="Status" />
            <ObjectStatus
                class="sapMObjectStatusLarge"
                text="{detalleReserva>/Status}"
                state="Success"
            />
        </VBox>
    </HBox>
</core:FragmentDefinition>
