<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <HBox
        gap="5%"
        wrap="Wrap"
    >
        <VBox>
            <HBox
                gap="5px"
                wrap="Wrap"
            >
                <ObjectAttribute title="Autor" />
                <Text text="{LocalModel>customerContact}" />
            </HBox>
            <HBox
                gap="5px"
                wrap="Wrap"
            >
                <ObjectAttribute title="Area" />
                <Text text="ELE CL23" />
            </HBox>
            <HBox
                gap="5px"
                wrap="Wrap"
            >
                <ObjectAttribute title="Centro" />
                <Text text="{LocalModel>center}" />
            </HBox>
        </VBox>
        <VBox>
            <ObjectStatus title="Status" />
            <ObjectStatus
                class="sapMObjectStatusLarge"
                text="{LocalModel>state}"
                state="Success"
            />
        </VBox>
    </HBox>
</core:FragmentDefinition>
