<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <HBox
        gap='5%'
        wrap="Wrap"
    >
        <VBox rowGap='20%'>
            <HBox
                wrap="Wrap"
            >
                <ObjectAttribute title="{i18n>user} " />
                <Text text="{detalleReserva>/Reserva/Usuario}" />
            </HBox>
            <HBox
                wrap="Wrap"
            >
                <ObjectAttribute title="{i18n>reservation} " />
                <Text text="{detalleReserva>/Reserva/Id}" />
            </HBox>
        </VBox>
        <VBox>
            <ObjectStatus title="{i18n>status}" />
            <ObjectStatus
                class="sapMObjectStatusLarge"
                text="{
                    path: 'detalleReserva>/Reserva/Status',
                    formatter: '.formatter.statusText'
                }"
                state="{
                    path: 'detalleReserva>/Reserva/Status',
                    formatter: '.formatter.statusTextState'
                }"
            />
        </VBox>
    </HBox>
</core:FragmentDefinition>
