<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:microchart="sap.suite.ui.microchart"
>
    <Table
        id="materialsTable"
        items="{detalleReserva>/FilteredItems}"
        autoPopinMode="true"
        mode="MultiSelect"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="Title" />
                <ToolbarSpacer />
                <SegmentedButton>
                    <items>
                        <SegmentedButtonItem text="Pendientes" press="showPending" />
                        <SegmentedButtonItem text="Completados" press="showCompleted" />
                    </items>
                </SegmentedButton>
                <ToolbarSpacer width="50px" />
                <SearchField width="250px" placeholder="Material" search="onSearchMaterial" />
                <ToolbarSeparator />
                <ToolbarSeparator />
                <Button icon="sap-icon://full-screen" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column  >
                <Text text="Material" />
            </Column>
            <Column autoPopinWidth="6">
                <Text text="Descripcion" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Pos." />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Cent. Alm." />
            </Column>
            <Column autoPopinWidth="6" popinDisplay="WithoutHeader">
                <Text text="" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Fecha" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="UbicaciÃ³n" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Retira" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Pendiente" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Cantidad" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="UMB" />
            </Column>
            <Column autoPopinWidth="6" hAlign="Center" >
                <Text text="% Enriquecimiento" />
            </Column>
            <Column autoPopinWidth="6" popinDisplay="WithoutHeader" >
                <Text text="" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                        titleActive="true"
                        title="{detalleReserva>Material}"
                    />
                    <Text text="{detalleReserva>Description}" />
                    <Text text="{detalleReserva>Pos}" />
                    <Text text="{detalleReserva>Center}" />
                    <Text text="{detalleReserva>Area}" />
                    <Text text="{detalleReserva>ReqDate}" />
                    <Text text="{detalleReserva>Location}" />
                    <Input
                        value="{detalleReserva>pending}"
                        type="Number"
                    />
                    <Text text="{detalleReserva>PendQuantity}" />
                    <Text text="{detalleReserva>ReqQuantity}" />
                    <Text text="{detalleReserva>Unit}" />
                    <Text text="{detalleReserva>Enhancement}"/>
                   
                    <microchart:RadialMicroChart
                        percentage="{detalleReserva>Enhancement}"
                        size="XS"
                        valueColor="Sequence7"
                        press=".onPressMaterial"
                    />
                   
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
