<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:microchart="sap.suite.ui.microchart"
>
    <Table
        id="materialsTable"
        items="{ path:'LocalModel>materiales' }"
        autoPopinMode="true"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="Title" />
                <ToolbarSpacer />
                <SegmentedButton>
                    <items>
                        <SegmentedButtonItem text="Pendientes" />
                        <SegmentedButtonItem text="Completados" />
                    </items>
                </SegmentedButton>
                <ToolbarSpacer width="50px" />
                <SearchField width="250px" />
                <ToolbarSeparator />
                <Button icon="sap-icon://print" />
                <ToolbarSeparator />
                <Button icon="sap-icon://full-screen" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column  >
                <Text text="Material" />
            </Column>
            <Column autoPopinWidth="6" popinDisplay="WithoutHeader" >
                <Text text="" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Pos." />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Cent. Alm." />
            </Column>
            <Column autoPopinWidth="6" popinDisplay="WithoutHeader">
                <Text text="" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Fecha" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="UbicaciÃ³n" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Retira" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Pendiente" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="Cantidad" />
            </Column>
            <Column autoPopinWidth="6" >
                <Text text="UMB" />
            </Column>
            <Column autoPopinWidth="6" popinDisplay="WithoutHeader" >
                <Text text="" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                        titleActive="true"
                        title="{LocalModel>id}"
                    />
                    <Text text="{LocalModel>description}" />
                    <Text text="{LocalModel>position}" />
                    <Text text="{LocalModel>center}" />
                    <Text text="{LocalModel>storage}" />
                    <Text text="{LocalModel>date}" />
                    <Text text="{LocalModel>location}" />
                    <Input
                        value="{LocalModel>pending}"
                        type="Number"
                    />
                    <Text text="{LocalModel>pending}" />
                    <Text text="{LocalModel>quantity}" />
                    <Text text="{LocalModel>unit}" />
                    <microchart:RadialMicroChart
                        percentage="{ path: 'LocalModel>caracteristicas', formatter: '.caracteristicasPorcentageFormatter' }"
                        size="XS"
                        valueColor="Sequence7"
                        press=".onPressMaterial"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
