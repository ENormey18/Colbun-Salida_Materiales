<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Table
        id="documentsTable"
        items="{detalleReserva>/Documentos}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title text="{i18n>accountingDocuments}" />
                <ToolbarSpacer />
                <ToolbarSpacer width="50px" />
                <SearchField
                    width="250px"
                    placeholder="{i18n>number}"
                    search="onSearchDocument"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="30%">
                <Text text="{i18n>documentNumber}" />
            </Column>
            <Column
                width="10%"
            >
                <Text text="{i18n>year}" />
            </Column>
            <Column
                width="30%"
                minScreenWidth="Tablet"
            >
                <Text text="{i18n>recipient}" />
            </Column>
            <Column
                width="10%"
                hAlign="Center"
            >
                <Text text="{i18n>signed}" />
            </Column>
            <Column
                width="20%"
                hAlign="Center"
            >
                <Text text="{i18n>visualize}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                        titleActive="true"
                        title="{
                            path: 'detalleReserva>Numero',
                            formatter: '.formatter.removeLeadingZeros'
                        }"
                    />
                    <Text text="{detalleReserva>AÃ±o}" />
                    <Text text="{detalleReserva>Dest}" />
                    <VBox>
                        <core:Icon
                            src="sap-icon://verified"
                            class="sapUiTinyMargin"
                            color="#4db1ff"
                            tooltip="Documento Firmado"
                            visible="{detalleReserva>Firmado}"
                        />
                        <Button
                            text="{i18n>sign}"
                            icon="sap-icon://edit"
                            type="Transparent"
                            tooltip="{i18n>signDocument}"
                            press="onFirmarDocumento"
                            visible="{= !${detalleReserva>Firmado} }"
                        />
                    </VBox>
                    <Button
                        type="Transparent"
                        tooltip="Open PDF"
                        icon="sap-icon://pdf-attachment"
                        press="onShowPDF"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
