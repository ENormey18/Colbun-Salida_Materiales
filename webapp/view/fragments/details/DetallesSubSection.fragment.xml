<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <VBox>
        <form:SimpleForm
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12"
            adjustLabelSpan="false"
        >
            <core:Title text="Información" />
            <layout:VerticalLayout>
                <Label text="Orden" showColon="true" />
                <Text text="{detalleReserva>/Reserva/Orden}" />

                <Label text="Fecha Base:" />
                <Text text="{detalleReserva>/Reserva/BaseDate}" />

                <Label text="Código Movimiento:" />
                <Text text="{detalleReserva>/Reserva/MovCode}" />
            </layout:VerticalLayout>

            <layout:VerticalLayout>
                <Label text="Centro de Coste:" />
                <Text text="{detalleReserva>/Reserva/CostCenter} - {detalleReserva>/Reserva/CostCenterD}" />

                <Label text="Destinatario:" />
                <Text text="{detalleReserva>/Reserva/Dest}" />

                <Label text="Centro:" />
                <Text text="{detalleReserva>/Reserva/Centro} - {detalleReserva>/Reserva/CentroD}" />
            </layout:VerticalLayout>

            <core:Title text="Otros detalles" />
            <layout:VerticalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
            </layout:VerticalLayout>
        </form:SimpleForm>
        <!-- <Toolbar style="Clear">
            <ToolbarSpacer />
            <Button text="Show More" />
        </Toolbar> -->
    </VBox>
</core:FragmentDefinition>
