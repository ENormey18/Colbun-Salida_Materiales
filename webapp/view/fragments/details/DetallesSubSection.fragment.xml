<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <VBox>
        <form:SimpleForm
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12"
            adjustLabelSpan="false"
        >
            <core:Title text="Detalle de cabecera" />
            <layout:VerticalLayout>
                <Label text="Reserva ID:" />
                <Text text="{detalleReserva>/id}" />

                <Label text="Contract:" />
                <Text text="{detalleReserva>/contract}" />

                <Label text="Base Requirmente Date:" />
                <Text text="{detalleReserva>/baseReqDate}" />
            </layout:VerticalLayout>

            <layout:VerticalLayout>
                <Label text="Changed On:" />
                <Text text="{detalleReserva>changedOn}" />
            </layout:VerticalLayout>

            <core:Title text="Otros detalles" />
            <layout:VerticalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
            </layout:VerticalLayout>
        </form:SimpleForm>
        <!-- <Toolbar style="Clear">
            <ToolbarSpacer />
            <Button text="Show More" />
        </Toolbar> -->
    </VBox>
</core:FragmentDefinition>
