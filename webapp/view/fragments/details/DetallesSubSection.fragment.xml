<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
>
    <VBox>
        <form:SimpleForm
            editable="false"
            labelSpanXL="4"
            labelSpanM="4"
            adjustLabelSpan="false"
        >
            <core:Title text="{i18n>information}" />
            <layout:VerticalLayout>
                <Label text="{i18n>order}" showColon="true" />
                <Text text="{detalleReserva>/Reserva/Orden}" />

                <Label text="{i18n>baseDate}" showColon="true" />
                <Text text="{detalleReserva>/Reserva/BaseDate}" />

                <Label text="{i18n>movementCode}" showColon="true" />
                <Text text="{detalleReserva>/Reserva/MovCode}" />
            </layout:VerticalLayout>

            <layout:VerticalLayout>
                <Label text="{i18n>costCenter}" showColon="true" />
                <Text text="{detalleReserva>/Reserva/CostCenter} - {detalleReserva>/Reserva/CostCenterD}" />

                <Label text="{i18n>recipient}" showColon="true"/>
                <Text text="{detalleReserva>/Reserva/Dest}" />

                <Label text="{i18n>center}" showColon="true"/>
                <Text text="{detalleReserva>/Reserva/Centro} - {detalleReserva>/Reserva/CentroD}" />
            </layout:VerticalLayout>

            <core:Title text="{i18n>otherDetails}" />
            <layout:VerticalLayout>
            </layout:VerticalLayout>
            <layout:VerticalLayout>
            </layout:VerticalLayout>
        </form:SimpleForm>
    </VBox>
</core:FragmentDefinition>
