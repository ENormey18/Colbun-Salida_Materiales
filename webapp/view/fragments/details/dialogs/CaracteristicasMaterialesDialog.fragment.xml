<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Modificación Características Materiales"
        resizable="true"
    >
        <content>
            <Table
                id="caracteristicasTable"
                items="{path:'LocalModel>caracteristicas'}"
                mode="MultiSelect"
            >
                <columns>
                    <Column>
                        <Text text="CAT" />
                    </Column>
                    <Column>
                        <Text text="Descripción CAT" />
                    </Column>
                    <Column>
                        <Text text="Valor CAT" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{LocalModel>cat}" />
                            <Text text="{LocalModel>descripcionCAT}" />
                            <Text text="{LocalModel>valorCAT}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button
                text="OK"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button text="Cancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
