<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Modificación Características Materiales"
        resizable="true"
    >
        <content>
            <VBox alignItems="Center">
                <VBox width="90%">
                    <Table
                        headerText="{LocalModel>description}"
                        id="caracteristicasTable"
                        items="{path:'LocalModel>caracteristicas'}"
                        mode="MultiSelect"
                    >
                        <columns>
                            <Column>
                                <Text text="CAT" />
                            </Column>
                            <Column>
                                <Text text="Descripción CAT" />
                            </Column>
                            <Column>
                                <Text text="Valor CAT" />
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{LocalModel>cat}" />
                                    <Text text="{LocalModel>descripcionCAT}" />
                                    <VBox >
                                        <Text text="{LocalModel>valorCAT}" visible="{= !!${LocalModel>valorCAT}}"/>
                                        <Input value="{LocalModel>newValorCAT}" editable="{= !${LocalModel>valorCAT}}" visible="{= !${LocalModel>valorCAT}}"/>
                                    </VBox>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="OK"
                type="Emphasized"
                press=".onAceptarCaracteristicas"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelarCaracteristicas"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
