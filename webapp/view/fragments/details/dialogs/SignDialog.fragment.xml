<core:FragmentDefinition xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog >
        <customHeader>
            <Toolbar style="Clear">
                <Button icon="sap-icon://decline" press=".onCloseSignatureDialog"/>
                <Title text="Signature"/>
                <ToolbarSpacer />
                <Button text="Save" press=".onSaveSignature"/>
            </Toolbar>
        </customHeader>
        <VBox class="sapUiSmallMargin">
            <Label
                required="true"
                text="Nombre: "
                labelFor="nombreFirmante"
            />
            <Input
                id="nombreFirmante"
                value="{detalleReserva>/nombreFirmanteAux}"
            />
        </VBox>
        <core:HTML id="signatureCanvas" afterRendering=".onAfterRenderingCanvas"/>
        <footer>
            <Toolbar style="Clear">
                <ToolbarSpacer />
                <Button text="Clear" press=".onClearSignature"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
