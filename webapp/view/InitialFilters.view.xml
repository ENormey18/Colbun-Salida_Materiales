<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="salidademateriales.controller.InitialFilters"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page title="Datos de reserva">
        <content>
            <form:SimpleForm>
                <Label text="Material" />
                <Input id="materialFromInput" placeholder="from" />
                <Input id="materialToInput" placeholder="to" />
                <Label text="Centro" />
                <Input id="centroInput" />
            </form:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Buscar"
                    press=".onBuscar"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
