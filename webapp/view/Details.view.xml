                                    <ToolbarSpacer />
                                    <Button text="Show More" />
                                </Toolbar>
                            </VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection title="Listado de materiales">
                        <uxap:blocks>
                            <Table
                                id="materialsTable"
                                items="{ path:'LocalModel>/reservas/0/Materiales' }"
                            >
                                <headerToolbar>
                                    <Toolbar>
                                        <Title text="Title" />
