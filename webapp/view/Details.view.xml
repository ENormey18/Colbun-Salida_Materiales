                                            />
                                            <Text text="{LocalModel>pending}" />
                                            <Text
                                                text="{LocalModel>quantity}"
                                            />
                                            <Text text="{LocalModel>unit}" />
                                            <microchart:RadialMicroChart
                                                percentage="75"
                                                size="XS"
                                                valueColor="Sequence7"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
